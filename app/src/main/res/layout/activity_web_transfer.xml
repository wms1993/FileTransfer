<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:fitsSystemWindows="true">

    <include
        android:id="@+id/topbar"
        layout="@layout/layout_top_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tip_1"
            style="@style/style_web_transfer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_12"
            android:text="@string/tip_web_transfer_first_tip"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:background="@color/darker_gray"
            android:padding="@dimen/dp_12"/>

        <TextView
            android:id="@+id/tv_tip_2"
            style="@style/style_web_transfer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_12"
            android:text="@string/tip_web_transfer_second_tip"/>

        <ImageView
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_96"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/web_transfer_url"/>

        <Button
            android:id="@+id/button_restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/str_restart_hotspot"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>
